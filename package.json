{
  "name": "image-processing-api",
  "version": "1.0.0",
  "description": "Prueba técnica: API REST para Procesado de Imágenes y Consulta de Tareas",
  "main": "index.js",
  "scripts": {
    "test": "vitest --silent",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run tests/integration/task.routes.spec.ts --silent",
    "test:load": "export $(grep -v '^#' .env | xargs) && k6 run tests/performance/get-task-load-test.js",
    "test:stress": "export $(grep -v '^#' .env | xargs) && npx artillery run tests/performance/stress-test.yml",
    "dev": "nodemon -r ts-node/register -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "start:worker": "node -r tsconfig-paths/register dist/infrastructure/workers/taskWorker.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.1",
    "bullmq": "^5.41.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fs-extra": "^11.3.0",
    "ioredis": "^5.5.0",
    "module-alias": "^2.2.3",
    "mongoose": "^8.10.2",
    "sharp": "^0.33.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.5",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.7",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "_moduleAliases": {
    "@models": "dist/infrastructure/database/models"
  }
}
